<g transform="translate({{plotArea.margin.left}},{{plotArea.margin.top}})">
  {{yield (hash
    line=(component "plaid-line" xScale=xScale yScale=yScale)
    area=(component "plaid-area" xScale=xScale yScale=yScale)
    scatter=(component "plaid-scatter" xScale=xScale yScale=yScale)
    symbol=(component "plaid-symbol")
    bar=(component "plaid-bar" xScale=xScale yScale=yScale)
    donut=(component "plaid-donut")
    text=(component "plaid-text")
    donut=(component "plaid-donut" width=plotArea.width height=plotArea.height)

    top-axis=(component "plaid-axis" orientation="top" scale=xScale)
    right-axis=(component "plaid-axis" orientation="right" scale=yScale x=plotArea.width)
    bottom-axis=(component "plaid-axis" orientation="bottom" scale=xScale y=plotArea.height)
    left-axis=(component "plaid-axis" orientation="left" scale=yScale))
  }}
</g>
