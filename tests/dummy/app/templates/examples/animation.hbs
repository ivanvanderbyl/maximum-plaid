<button onclick={{action "toggleDataSets"}}>Toggle data</button>

<svg width="500" height="150">
    <g transform="translate(24,24)">
      
      {{#plaid-animation data=(hash a=data.a) delay=0 as |data|}}
      <g transform="translate({{if data.a (add data.a 8) 0}}, 16)"><text style="dominant-baseline: middle;">{{format data.a format=",.2f"}}</text></g>
      <rect transform="translate(0, 0)" height="32" width={{data.a}} fill="red"></rect>
      {{/plaid-animation}}

      {{#plaid-animation data=(hash b=data.b) delay=1000 as |data|}}
      <g transform="translate({{if data.b (add data.b 8) 0}}, 48)"><text style="dominant-baseline: middle;">{{format data.b format=",.2f"}}</text></g>
      <rect transform="translate(0, 32)" height="32" width={{data.b}} fill="green"></rect>
      {{/plaid-animation}}

      {{#plaid-animation data=(hash c=data.c) delay=2000 as |data|}}
      <g transform="translate({{if data.c (add data.c 8) 0}}, 80)"><text style="dominant-baseline: middle;">{{format data.c format=",.2f"}}</text></g>
      <rect transform="translate(0, 64)" height="32" width={{data.c}} fill="blue"></rect>
      {{/plaid-animation}}

    </g>

</svg>
