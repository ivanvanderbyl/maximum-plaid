{{#with (area 664 220 margin="16 75 72 16") as |plotArea|}}
  {{#plaid-plot
      (band-scale (map-by 'mpg' fuelEconomy) (array 0 plotArea.width) padding-inner=0.05)
      (linear-scale (extent (map-by 'vehicles' fuelEconomy) toZero=true) (array plotArea.height 0))
      plotArea
    as |plot|}}

    {{#with (pair-by 'mpg' 'vehicles' fuelEconomy) as |values|}}
      {{!-- Plot bars --}}
      {{plot.bar values orientation='vertical' fill="#673AB7" barConstructor=(rounded-rect radius="5 5 0 0")}}

      {{!-- Bottom Axis --}}
      {{#plot.bottom-axis values ticks=10 tickFormat=(format-fn "0.1s")}}
        {{plot.text 'MPG' class='axis-title' x=(div plotArea.width 2) y=40}}
      {{/plot.bottom-axis}}

      {{!-- Right Axis --}}
      {{#plot.right-axis values tickFormat=(format-fn "0.1s") ticks=3}}
        {{plot.text 'Number of Vehicles' class='axis-title' x=50 y=(div plotArea.height 2) textRotate=90}}
      {{/plot.right-axis}}
    {{/with}}
  {{/plaid-plot}}
{{/with}}
